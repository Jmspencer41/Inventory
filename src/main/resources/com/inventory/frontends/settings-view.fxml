                </HBox>
            </children>
        </VBox>
    </top>
   <center>
      <ScrollPane BorderPane.alignment="CENTER">
         <content>
            <VBox>
               <children>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <CheckBox mnemonicParsing="false" onAction="#darkMode" text="Dark Theme">
                           <font>
                              <Font size="14.0" />
                           </font>
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                        </CheckBox>
                     </children>
                  </HBox>
               </children></VBox>
         </content>
      </ScrollPane>
   </center>
